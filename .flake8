[flake8]
max-line-length = 100
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .pytest_cache,
    htmlcov,
    .coverage,
    build,
    dist,
    *.egg-info
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
per-file-ignores =
    __init__.py:F401
    tests/*:E501,F401,F811
    */conftest.py:F401,F811
extend-ignore = 
    # Additional ignores for specific cases
    F401,  # imported but unused (common in __init__.py files)
docstring-convention = google
statistics = True
count = True
